#include <fltk/draw.h>

void
push_matrix ( )

void
pop_matrix ( )

void
scale ( x, y = NO_INIT )
    CASE: items == 1
        float x
        C_ARGS: x
    CASE: items == 2
        float x
        float y
        C_ARGS: x, y

void
translate ( x, y )
    CASE: SvNOK(ST(1)) || SvNOK(ST(2))
        float x
        float y
    CASE:
        int x
        int y

 # ...

void
setcolor ( COLOR )
    Color COLOR


