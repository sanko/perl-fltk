void
addvertex ( x, y )
    CASE: SvNOK(ST(1)) || SvNOK(ST(2))
        float x
        float y
    CASE:
        int x
        int y


 # ... I think

void drawtext ( TEXT, BYTES, X, Y )
    CASE: items == 4
        const char * TEXT
        int          BYTES
        float        X
        float        Y
        C_ARGS: TEXT, BYTES, X, Y
    CASE: items == 3
        const char * TEXT
        float        X
        float        Y
        C_ARGS: TEXT, X, Y


 # ...

void
fillstrokepath ( COLOR )
    Color COLOR

void
fillrect ( X, Y, W, H )
